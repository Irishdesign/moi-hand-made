/********** 產品服務card效果 **********/
.product-categories > a{
    /* 變形-縮放-維持目前尺寸 */
    transform: scale(1);
    /* 過渡效果 */
    transition: transform .4s ease-out;
}
.product-categories > a:hover{
    /* 變形-縮放-放大1.02倍 */
    transform: scale(1.02);
    /* 陰影 */
    box-shadow: 4px 4px 10px #999;
}
